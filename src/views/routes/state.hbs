<div class="container p-4">
  <div class="row">
    {{#each resultado}}
    
      <div id="card_margins" class="col-md-4">
        <div class="card" style="width: 17rem;">
          <img src="../../public/img/img_pet/{{image}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">Nombre: <strong>{{pet_name}}</strong></h5>
            <p class="card-text">{{motivo_visita}}</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Due√±o: <em>{{fullname}}</em></li>
          </ul>
          <div id="container_buttons_pet" class="container p-4">
            <a href="/main/view/{{id}}" class="btn btn-success">Ver</a>
            <a href="/main/edit/{{id}}" class="btn btn-warning">Editar</a>
            <a href="/bill/generate_bill/{{id}}" class="btn btn-info "><img src="../../public/img/icons/impuesto.png"
                alt="">Facturar</a>
          </div>

        </div>
      </div>
    {{/each}}
  </div>

</div>


